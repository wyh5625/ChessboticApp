<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".robot_arm.RobotArmControllerActivity">


    <com.example.ChessPlayerApp.chessboardcamera.ZoomCameraView
        android:id="@+id/ZoomCameraView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        tools:context=".MainActivity" />

    <SeekBar
        android:id="@+id/CameraZoomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ZoomCameraView"
        android:layout_centerInParent="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />


</RelativeLayout>